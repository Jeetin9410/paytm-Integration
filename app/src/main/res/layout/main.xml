<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar">

    </include>






    <ScrollView
        android:layout_marginTop="55dp"
        android:layout_marginBottom="49dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">









            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/iohone1"
                android:id="@+id/image"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                >




                <!--*********Iphone price**********-->

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/iphone6s"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="iPhone 6s"
                        android:textSize="21dp"
                        android:textColor="@color/colorTex"
                        />

                    <TextView
                        android:id="@+id/price"
                        android:layout_weight="4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â‚¹1,000"
                        android:textSize="21dp"
                        android:textColor="@color/colorTex"
                        />
                </LinearLayout>


                <!--*********Shipping**********-->

                <LinearLayout

                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <TextView

                        android:id="@+id/free"
                        android:layout_width="110dp"
                        android:layout_height="28dp"
                        android:background="@drawable/rect"
                        android:text="Free Shipping"
                        android:textColor="#fff"
                        android:gravity="center"

                        />

                    <LinearLayout

                        android:layout_marginLeft="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_weight="1.6"
                            android:id="@+id/est"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Est. delivery"
                            android:textSize="13dp"
                            android:textColor="@color/colorSub"
                            />

                        <TextView
                            android:layout_weight="0.8"
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dec 17-20"
                            android:textSize="13dp"
                            android:textColor="@color/colorTex"
                            />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />

                <!--*********Iphone price**********-->

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/condition1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Condition"
                        android:textColor="@color/colorSub"

                        />

                    <TextView
                        android:id="@+id/condition2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New with box"
                        android:textColor="@color/colorTex"

                        />
                </LinearLayout>

                <!--*********Brand**********-->

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/brand1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Brand"
                        android:textColor="@color/colorSub"

                        />

                    <TextView
                        android:id="@+id/brand2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Apple"
                        android:textColor="@color/colorTex"

                        />
                </LinearLayout>

                *********size**********

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/size1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dimensions"
                        android:textColor="@color/colorSub"

                        />

                    <TextView
                        android:id="@+id/size2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="138.3 * 67.1mm"
                        android:textColor="@color/colorTex"

                        />
                </LinearLayout>


                <!--*********weight**********-->

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/weight1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Weight"
                        android:textColor="@color/colorSub"

                        />

                    <TextView
                        android:id="@+id/weight2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="143 grams"
                        android:textColor="@color/colorTex"

                        />
                </LinearLayout>



                <!--*********show more**********-->

                <LinearLayout
                    android:id="@+id/linear1"
                    android:gravity="center"

                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView

                        android:id="@+id/show1"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SHOW MORE"
                        android:textColor="#4c71f5"
                        android:textSize="11dp"
                        android:gravity="center"
                        android:drawableRight="@drawable/arrow"
                        android:drawablePadding="8dp"

                        />


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/linear2"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--*********weight**********-->

                    <LinearLayout

                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/display1"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Display"
                            android:textColor="@color/colorSub"

                            />

                        <TextView
                            android:id="@+id/display2"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="4.7 inch"
                            android:textColor="@color/colorTex"

                            />
                    </LinearLayout>


                    <!--*********camera**********-->

                    <LinearLayout

                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/camera1"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="iSight Camera"
                            android:textColor="@color/colorSub"

                            />

                        <TextView
                            android:id="@+id/camera2"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="12-megapixel with 1.22Âµ pixels"
                            android:textColor="@color/colorTex"

                            />
                    </LinearLayout>


                    <!--*********video**********-->

                    <LinearLayout

                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/video1"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Video Recording"
                            android:textColor="@color/colorSub"

                            />

                        <TextView
                            android:id="@+id/video2"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="4K video recording (3840x2160)"
                            android:textColor="@color/colorTex"

                            />
                    </LinearLayout>

                    <!--*********Sim**********-->

                    <LinearLayout

                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/sim1"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SIM Card"
                            android:textColor="@color/colorSub"

                            />

                        <TextView
                            android:id="@+id/sim2"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nano-SIM"
                            android:textColor="@color/colorTex"

                            />
                    </LinearLayout>




                    <!--*********show less**********-->

                    <LinearLayout
                        android:id="@+id/showless"
                        android:gravity="center"

                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView

                            android:id="@+id/show2"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SHOW LESS"
                            android:textColor="#4c71f5"
                            android:textSize="11dp"
                            android:gravity="center"
                            android:drawableRight="@drawable/arrow1"
                            android:drawablePadding="8dp"

                            />

                    </LinearLayout>


                </LinearLayout>



                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />



                <!--*********discription**********-->

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/disc1"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Item discription"
                        android:textColor="@color/colorSub"
                        android:drawableRight="@drawable/arrow2"

                        />

                </LinearLayout>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />



                <!--*********Est. delivery**********-->

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/estdelivery1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Est. delivery"
                        android:textColor="@color/colorSub"
                        />

                    <TextView
                        android:id="@+id/estdelivery2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tue, Feb 17 - Fri, Feb 18"
                        android:textColor="@color/colorTex"
                        android:drawableRight="@drawable/arrow2"

                        />

                </LinearLayout>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />




                <!--*********Returns**********-->

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/return1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Returns"
                        android:textColor="@color/colorSub"
                        />

                    <TextView
                        android:id="@+id/return2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Not accepted"
                        android:textColor="@color/colorTex"
                        />

                </LinearLayout>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />




                <!--*********Guarantee**********-->

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/guarantee1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Returns"
                        android:textColor="@color/colorSub"
                        />

                    <TextView
                        android:id="@+id/guarantee2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Money Back Guarantee"
                        android:textColor="@color/colorTex"
                        android:drawableRight="@drawable/arrow2"

                        />

                </LinearLayout>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        android:layout_marginTop="20dp"

                        >

                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon1"
                            android:layout_gravity="center"
                            android:gravity="bottom"

                            />

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/addtocart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Add to cart"

                            android:gravity="center"
                            android:textSize="12dp"
                            android:textColor="#4c71f5"
                            />

                    </LinearLayout>

                    <View

                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colordevider"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"

                        />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        android:layout_marginTop="20dp"
                        >

                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon2"
                            android:layout_gravity="center"
                            android:gravity="bottom"

                            />

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/share"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Share"

                            android:gravity="center"
                            android:textSize="12dp"
                            android:textColor="#4c71f5"
                            />

                    </LinearLayout>

                    <View

                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colordevider"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"


                        />




                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        android:layout_marginTop="20dp"
                        >

                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon3"
                            android:layout_gravity="center"
                            android:gravity="bottom"

                            />



                        <TextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:id="@+id/sell"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Sell one like this"
                            android:layout_gravity="center"
                            android:textSize="12dp"
                            android:textColor="#4c71f5"
                            />
                    </LinearLayout>
                </LinearLayout>
















            </LinearLayout>
        </LinearLayout>
    </ScrollView>



